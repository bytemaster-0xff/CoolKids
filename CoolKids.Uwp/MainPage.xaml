<Page
    x:Class="CoolKids.Uwp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CoolKids.Uwp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		
		<Image Grid.Row="0" Name="Cam1Image" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" />

		<TextBox Grid.Row="1" Name="Cam1Result" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" Tapped="Cam1Result_Tapped"></TextBox>

		<Button Name="RefreshButton" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" Content="Refresh" Tapped="RefreshButton_Tapped"/>
	</Grid>
</Page>
